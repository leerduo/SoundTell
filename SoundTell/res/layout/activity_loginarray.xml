<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/account_banner" />

    <TextView 
        android:text="哼哼账号登录"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:drawableLeft="@drawable/hh_login_icon"
        android:textSize="20sp"
    	 android:layout_gravity="center_horizontal"
    	 android:layout_marginTop="30dp"
        android:gravity="center"
        />
    
     <ImageView
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:layout_height="0.5dp"
        android:contentDescription="@string/app_name" android:layout_gravity="center_horizontal"
        android:background="@color/app_split_line" />
     
     
     <TextView 
        android:text="微信账号登录"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:drawableLeft="@drawable/weixin_login_icon"
        android:textSize="20sp"
    	 android:layout_gravity="center_horizontal"
    	 android:layout_marginTop="10dp"
        android:gravity="center"
        />
    
     <ImageView
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:layout_height="0.5dp"
        android:contentDescription="@string/app_name" android:layout_gravity="center_horizontal"
        android:background="@color/app_split_line" />
    
     <TextView 
        android:text="微博账号登录"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:drawableLeft="@drawable/sina_login_icon"
        android:textSize="20sp"
    	 android:layout_gravity="center_horizontal"
    	 android:layout_marginTop="10dp"
        android:gravity="center"
        />
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:paddingLeft="30dp"
         android:paddingRight="30dp"
         android:orientation="horizontal"
         
         >
         
            <TextView 
                android:id="@+id/loginarray_return"
        android:text="返回"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:textSize="17sp"
    	 android:layout_gravity="bottom"
    	 android:layout_marginBottom="10dp"
       
        />
            
              <TextView 
        android:text="注册账号"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:textSize="17sp"
    	 android:layout_gravity="bottom"
    	 android:gravity="right"
    	 android:layout_marginBottom="10dp"
       
        />
         
         
         
         
     </LinearLayout>
     
     
     
    
    
</LinearLayout>