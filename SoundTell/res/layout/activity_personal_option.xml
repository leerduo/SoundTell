<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <ImageView
                    android:id="@+id/peraloption_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back_black" />

                <TextView
                    android:id="@+id/singrecord_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="因你而在"
                    android:textColor="#ff0000"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                   android:src="@drawable/opt_search"/>
            </RelativeLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal" 
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >
    <TextView 
        android:id="@+id/personaloption_banzou"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="自选伴奏"
        android:background="@drawable/shape_bg_personaloption_sel_left"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/personaloption_geci"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="自选歌词"
        android:background="@drawable/shape_bg_personaloption_right"
        android:textSize="14sp"
        android:textColor="@color/app_red"
        android:gravity="center"
        />
</LinearLayout>
 <ScrollView 
     android:layout_height="wrap_content"
   android:layout_width="match_parent"
 android:id="@+id/personaloption_sv"
    android:visibility="visible"
    >
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <ImageView 
            android:id="@+id/personaloption_zhuti"
            android:layout_height="wrap_content"
            android:src="@drawable/demo10"
            android:layout_width="match_parent"            />
        <ImageView 
            android:layout_height="wrap_content"
            android:src="@drawable/demo11"
            android:layout_width="match_parent"            />
        <ImageView 
            android:layout_height="wrap_content"
            android:src="@drawable/demo12"
            android:layout_width="match_parent"            />
    </LinearLayout> 
 </ScrollView>
     <ImageView 
            android:layout_height="wrap_content"
            android:src="@drawable/demo13"
            android:layout_width="match_parent"            />
</LinearLayout>
