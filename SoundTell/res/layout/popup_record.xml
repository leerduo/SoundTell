<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   >
    <TextView 
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#80000000"
        />
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp"
     android:layout_weight="1"
     android:background="#ffffff"
   >
<LinearLayout 
    android:id="@+id/temp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:background="#ffffff"
    android:padding="20dp"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_weight="1"
     android:gravity="center_horizontal"
   >
 <ImageView 
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:src="@drawable/console_original"
     android:scaleType="centerInside"
     android:paddingLeft="10dp"
     android:paddingRight="10dp"
     />
    <TextView 
        android:layout_marginTop="5dp"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:text="无效果"
        android:textColor="#000000"
    android:textSize="12sp"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_weight="1"
     android:gravity="center_horizontal"
   >
 <ImageView 
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:src="@drawable/console_recording_room"
     android:scaleType="centerInside"
     android:paddingLeft="10dp"
     android:paddingRight="10dp"
     />
    <TextView 
        android:layout_marginTop="5dp"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:text="录音棚"
        android:textColor="#000000"
    android:textSize="12sp"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_weight="1"
     android:gravity="center_horizontal"
   >
 <ImageView 
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:src="@drawable/console_empty_house"
     android:scaleType="centerInside"
     android:paddingLeft="10dp"
     android:paddingRight="10dp"
     />
    <TextView 
        android:layout_marginTop="5dp"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:text="空房间"
        android:textColor="#000000"
    android:textSize="12sp"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_weight="1"
     android:gravity="center_horizontal"
   >
 <ImageView 
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:src="@drawable/console_corridor"
     android:scaleType="centerInside"
     android:paddingLeft="10dp"
     android:paddingRight="10dp"
     />
    <TextView 
        android:layout_marginTop="5dp"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:text="走廊"
        android:textColor="#000000"
    android:textSize="12sp"
        />
</LinearLayout>
</LinearLayout>


<LinearLayout
    android:id="@+id/temp1"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
     android:orientation="horizontal"
    android:layout_below="@id/temp"
     >
        <TextView 
            android:id="@+id/singrecord_time"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="伴奏"
            android:textColor="@color/black"
            android:gravity="clip_vertical"
            android:textSize="12sp"
            />
   <SeekBar
        android:id="@+id/singrecord_seeker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:maxHeight="5.0dip"
        android:minHeight="5.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:progressDrawable="@drawable/record_play_track"
        android:thumb="@drawable/console_toggle"
        android:max="100"
        android:progress="50"        
         />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
     android:orientation="horizontal"
    android:layout_below="@id/temp1"
     >
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="人声"
            android:textColor="@color/black"
            android:gravity="clip_vertical"
            android:textSize="12sp"
            />
   <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:maxHeight="5.0dip"
        android:minHeight="5.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:progressDrawable="@drawable/record_play_track"
        android:thumb="@drawable/console_toggle"
        android:max="100"
        android:progress="50"        
         />
</LinearLayout>




<LinearLayout 
      android:layout_height="wrap_content"
    android:layout_width="match_parent"
       android:padding="10dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    >
    <TextView 
         android:id="@+id/popuprecord_no"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="取消"
    android:textSize="16sp"
    android:textColor="#000000"
    android:layout_weight="1"
    android:gravity="center"
    />
<TextView 
    
   android:id="@+id/popuprecord_yes"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:text="确认"
    android:textSize="16sp"
    android:textColor="#ff0000"
    />
    
    
</LinearLayout>



</RelativeLayout>
</LinearLayout>
