<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#80000000"
    >
    
 <TextView 
     android:id="@+id/popupalter_cancel"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="15dp"
     android:layout_marginTop="5dp"
     android:text="取消"
     android:textSize="16sp"
     android:textColor="#333333"
     android:layout_alignParentBottom="true"
     android:background="#eeffffff"
      android:gravity="center"
     />   
 <TextView 
     android:id="@+id/popupalter_getup"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="15dp"
     android:text="放弃演唱"
     android:textSize="16sp"
     android:textColor="#333333"
     android:background="#eeffffff"
     android:gravity="center"
     android:layout_above="@id/popupalter_cancel"
     />   
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#777777"         
          android:layout_above="@id/popupalter_getup"
         />
      <TextView 
     android:id="@+id/popupalter_again"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="15dp"
     android:text="重新演唱"
     android:textSize="16sp"
     android:textColor="#333333"
     android:background="#eeffffff"
     android:gravity="center"
     android:layout_above="@id/popupalter_getup"
     android:layout_marginBottom="1dp" 
     /> 
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#777777"         
          android:layout_above="@id/popupalter_again"
         />
      <TextView 
     android:id="@+id/popupalter_ok"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="15dp"
     android:text="完成录制"
     android:textSize="16sp"
     android:textColor="#333333"
     android:background="#eeffffff"
     android:gravity="center"
     android:layout_above="@id/popupalter_again"
     android:layout_marginBottom="1dp" 
     /> 
</RelativeLayout>
