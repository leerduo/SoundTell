<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <ImageView
            android:id="@+id/singrecord_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back_black" />

        <TextView
            android:id="@+id/singrecord_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="因你而在"
            android:textColor="#ff0000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/playmusic_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="举报"
            android:textColor="@color/actionsheet_gray"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/playmusic_l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/record_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/playmusic_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/layout_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#7f333333"
                    android:gravity="center"
                    android:orientation="horizontal" >
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:background="#40000000"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/playmusic_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/ll"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:id="@+id/playmusic_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="因你而在"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/playmusic_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="用户昵称"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/playmusic_follow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/song_detail_zan_nomal"
                        android:gravity="center_horizontal"
                        android:text="7079"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/playmusic_cai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/song_detail_cai_nomal"
                        android:gravity="center_horizontal"
                        android:text="33"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/playmusic_share"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/song_detail_share"
                        android:gravity="center_horizontal"
                        android:text="33"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/playmusic_mark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/song_detail_mark_nomal"
                        android:gravity="center_horizontal"
                        android:text="101"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" >

            <TextView
                android:id="@+id/playmusic_start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/playmusic_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <SeekBar
                android:id="@+id/playmusic_seeker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_toLeftOf="@id/playmusic_time"
                android:layout_toRightOf="@id/playmusic_start"
                android:focusable="true"
                android:maxHeight="5.0dip"
                android:minHeight="5.0dip"
                android:progress="3"
                android:progressDrawable="@drawable/record_play_track"
                android:thumb="@drawable/thumb" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/playmusic_choose_tv"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/playmusic_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/song_detail_comment"
                    android:gravity="center"
                    android:text="评论"
                    android:textColor="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/playmusic_comment"
                    android:text="10"
                    android:textColor="#999999" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/playmusic_play"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/song_detail_play_btn" />

            <TextView
                android:id="@+id/playmusic_meto"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/song_detail_letmesing"
                android:gravity="center"
                android:text="我来唱"
                android:textColor="#999999" />
        </LinearLayout>
    </LinearLayout>

    <com.xh.soundtell.listview.XListView
        android:id="@+id/playmusic_xListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/app_split_line"
        android:dividerHeight="0.5dp"
        android:visibility="gone" >
    </com.xh.soundtell.listview.XListView>

</LinearLayout>